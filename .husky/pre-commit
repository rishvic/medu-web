GIT_CONSTANTS_FILE="src/lib/server/gitConstants.ts"

DATE_MODIFIED="$(date -u '+%Y-%m-%dT%H:%M:%SZ')"

cat >"${GIT_CONSTANTS_FILE}" <<EOF
// This file is automatically generated by the 'pre-commit' Git hook.

// Timestamp of the last commit.
export const DATE_MODIFIED = '${DATE_MODIFIED}';
EOF

git add "${GIT_CONSTANTS_FILE}"

echo "Successfully updated and staged DATE_MODIFIED: '${DATE_MODIFIED}'"
